"> </script>
<script rel="JavaScript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"> </script>

<script rel="JavaScript" src="/js/create_client.js"> </script>
<link rel="stylesheet" href="/css/createClient.css">


{{#if estatus }}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <strong>Exito al guardar el registro</strong>.
</div>
{{else}}
    {{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <strong>Error</strong> {{text}}.
</div>
{{/each}}
{{/if}}

<!-- multistep form -->
<form id="msform" action= '/client/newCliente' method="post">
  <!-- progressbar -->
  <ul id="progressbar">
    <li class="active">Registro 1</li>
    <li>Registro 2</li>
    <li>Registro 3</li>
  </ul>
  <!-- fieldsets -->
  <fieldset>
    <h2 class="fs-title">Registra tu nombre</h2>
    <h3 class="fs-subtitle">Paso 1</h3>
    <input type="text" class="form-control" id="inputName" name='inputName' placeholder="Nombre" onkeyup="this.value = this.value.toUpperCase();" value='{{inputName}}'>
    <input type="text" class="form-control" id="inputLname" name='inputLname' placeholder="Apellidos" onkeyup="this.value = this.value.toUpperCase();" value='{{inputLname}}'>
    <input type="button" name="next" class="next action-button" value="Siguiente" />
  </fieldset>
  <fieldset>
    <h2 class="fs-title">Registra correo y teléfono</h2>
    <input type="email" class="form-control" id="inputEmail" name='inputEmail' placeholder="Correo electronico" value='{{inputEmail}}'>
    <input type="tel" class="form-control" id="inputPhone" name='inputPhone' placeholder="Teléfono"
      pattern="[0-9]{2}(-?[0-9]{2}){3,4}" value='{{inputPhone}}'>
    <input type="button" name="previous" class="previous action-button" value="Anterior" />
    <input type="button" name="next" class="next action-button" value="Siguiente" />
  </fieldset>
  <fieldset>
    <h2 class="fs-title">Registra dirección</h2>
    <input type="text" class="form-control" id="inputAddress" name='inputAddress' placeholder="Dirreción 1" onkeyup="this.value = this.value.toUpperCase();" value='{{inputAddress}}'>
    <input type="text" class="form-control" id="inputAddress2" name='inputAddress2' placeholder="Dirección 2" onkeyup="this.value = this.value.toUpperCase();" value='{{inputAddress2}}'>
    <input type="text" class="form-control" id="inputCity" name='inputCity' required
    onkeyup="this.value = this.value.toUpperCase();" placeholder="Ciudad" value='{{inputCity}}'>
    <input type="text" class="form-control" id="inputState" name='inputState' required
    onkeyup="this.value = this.value.toUpperCase();" placeholder="Estado" value='{{inputState}}'>
    <input type="text" class="form-control" id="inputZip" name='inputZip' required
    pattern="[0-9]{5}" placeholder="C.P." value='{{inputZip}}'>
    <input type="button" name="previous" class="previous action-button" value="Anterior" />
    <input id="guardar_cliente" type="submit" name="submit" class="submit action-button" value="Guardar">
    <button id="s_guardar_cliente" type="submit" name="submit" class="submit action-button">Guardar</button>
  </fieldset>
</form>