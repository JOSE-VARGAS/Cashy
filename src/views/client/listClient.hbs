<link rel="stylesheet" href="/css/table.css">

<!-- Trigger the modal with a button -->
<button id='clickModal' 
type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button id='skip_modal' type="button" class="close" data-dismiss="modal">&times;</button>
        <!--h4 class="modal-title">Modal Header</h4-->
      </div>
      <div id="modal-body" class="modal-body">
        
      </div>
      <div class="modal-footer">
        <button id='continue_modal' type="button" class="btn btn-success" data-dismiss="modal">Continuar</button>
      </div>
    </div>

  </div>
</div>

<br>
<br>
       <div id="wrap" class = 'bg-light'>
            <div class="container">
            <br>
            <h3>Lista de clientes en Open pay</h3>
            <br>
                 <table id="table_id" cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre completo</th>
                            <th>Correo electronico</th>
                            <th>Acci√≥n</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each list}}
                        <tr class="gradeX">
                            <td>{{id}}</td>
                            <td>{{name}} {{last_name}}</td>
                            <td class="center">{{email}}</td>
                            <td>
                            <a href="#" class="view" title="View" data-toggle="tooltip"
                            onclick="return viewClient('{{id}}');">
                            <i class="material-icons">&#xE417;</i></a>
                            <a href="#" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons" onclick="return updateClient('{{id}}');">&#xE254;</i></a>
                            <a href="#" class="delete" title="Delete" data-toggle="tooltip"
                            onclick="return deleteClient('{{id}}');">
                            <i class="material-icons">&#xE872;</i></a>
                        </td>
                        </tr>
                        {{/each}}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Nombre completo</th>
                            <th>Correo electronico</th>
                            <th>Accion</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        
